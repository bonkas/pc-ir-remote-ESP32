# ESPHome secrets template
# Copy this file to secrets.yaml and fill in your values.
# secrets.yaml is excluded from git — never commit it.

wifi_ssid: "YourNetworkName"
wifi_password: "YourWiFiPassword"

# Generate a random API key (run this in a terminal):
#   openssl rand -base64 32
# Or use the ESPHome dashboard — it generates one automatically.
api_key: "your-32-byte-base64-api-key-here"

# Choose any password for over-the-air firmware updates.
ota_password: "your-ota-password-here"
